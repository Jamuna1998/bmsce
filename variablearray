#include<stdio.h>

int input(int arr[],int n)
{
int i;
printf("enter the size of array\n");
scanf("%d",&n);

printf("enter the array of numbers");
for(i=0;i<n;i++)
{
scanf("%d",&arr[n]);
}
return 0;
}

void sum(int *p,int n,int *sum)
{
int i;
sum=0;
for(i=0;i<n;i++)
{
*sum=*sum+*p;
}
//return *sum;
}

int output(int sum)
{
printf("sum is=%d",sum);
return 0;
}

int main()
{
int n,c,arr[10],*p;
n=sizeof(arr);
p=arr;
input(p,n);
sum(p,n,&c);
output(c);
}


