#include<stdio.h>
void input(int *p,int *n)
{
int i;
printf("enter the size of array\n");
scanf("%d",n);

printf("enter the array of numbers");
for(i=0;i<*n;i++)
{
scanf("%d",p);
p++;
}
}

int sum(int *p,int n)
{
int i,sum;
sum=0;
for(i=0;i<n;i++)
{
printf("%d",*p);
sum=sum+*p;
p++;

}
return sum;
//printf("sum=%d",sum);
}

void output(int sum)
{
printf("sum is=%d",sum);
}

int main()
{
int arr[10],n,c;
int *p;
p=arr;
input(p,&n);
c=sum(p,n);
output(c);
}


