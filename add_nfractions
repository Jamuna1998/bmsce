}

void display(struct fractions f[],int sum,int n)
{	
	int i;
	printf("sum of=");
	for(i=0;i<n;i++)
	   {    
		printf("%d/%d,",f[i].num,f[i].deno);
	   }
printf("is=%d",sum);
}
int main()
{
	struct fractions f[5];
	int n,c;
	input(f,&n);
	sum(f,n,&c);
	display(f,c,n);
}
