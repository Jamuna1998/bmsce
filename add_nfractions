#include<stdio.h>
struct fractions
{
	int num;
	int deno;
};

struct fractions arr[5];

void input(struct fractions *p,struct fractions *f,int *n)
{	int i;
	printf("enter the number of fractions\n");
	scanf("%d",n);
	printf("enter the fractions\n");
	for(i=0;i<*n;i++)
		{
		   printf("enter the numerator\n");
		   scanf("%d",&f->num);
		   printf("enter the denominator\n");
		   scanf("%d",&f->deno);
		}
}

void sum(struct fractions *p,struct fractions f,int n,int *sum)
{
	int i,;
	*sum=0;
	for(i=0;i<n;i++)
	   {
		printf("---");
	   }
}

int main()
{
	struct fractions f;
 	struct fractions arr[5],*p;
