#include<stdio.h>
struct fractions
{
	int num;
	int deno;
};

int GCD(int,int);
void input(struct fractions f[],int *n)
{	int i;
	printf("enter the number of fractions\n");
	scanf("%d",n);
	printf("enter the fractions\n");
	for(i=0;i<*n;i++)
		{
		   printf("enter the numerator\n");
		   scanf("%d",&f[i].num);
		   printf("enter the denominator\n");
		   scanf("%d",&f[i].deno);
		}
}


void sum(struct fractions f[],int n,int *sum,int *gcdresult)
{	
	//int numerator,denominator;
	int i;
	*sum=0;
	for(i=0;i<n;i++)

	   { 
	     	*gcdresult=GCD(f[i].deno,n);
		int denominator=(f[i].deno*f[i+1].deno)/(*gcdresult);
		int numerator=f[i].num*denominator/f[i].deno;
                *sum=*sum+numerator;
	   }
}

int GCD(int a,int b)
{
	if(a==0)
	   return b;
        else
	   return GCD(b%a,a);
}

void display(struct fractions f[],int sum,int n,int gcdresult)
{	
	int i;
	printf("sum of=");
	for(i=0;i<n;i++)
	   {    
		printf("%d/%d,",f[i].num,f[i].deno);
	   }
printf("is=%d/%d",sum,gcdresult);
}
int main()
{
	struct fractions f[5];
	int n,c,gcdresult;
	input(f,&n);
	sum(f,n,&c,&gcdresult);
	display(f,c,n,gcdresult);
}
